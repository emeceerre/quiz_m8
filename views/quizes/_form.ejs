	<option value="Ocio" <% if (quiz.tematica =="Ocio"){ %> selected="selected" <% } %> >Ocio</option>
	<option value="Ciencia" <% if (quiz.tematica =="Ciencia"){ %> selected="selected" <% } %> >Ciencia</option>
	<option value="Tecnologia" <% if (quiz.tematica=="Tecnologia"){ %> selected="selected" <% } %> >Tecnología</option>
</select>
